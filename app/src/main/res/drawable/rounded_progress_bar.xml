<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Círculo externo (esfera completa) -->
    <item android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="150dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <!-- Círculo interno (o centro vazado) -->
    <item android:left="60dp" android:right="60dp" android:top="60dp" android:bottom="150dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/background_dark" />
        </shape>
    </item>

</layer-list>
